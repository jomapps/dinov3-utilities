# Database Configuration (MongoDB - already installed locally)
MONGODB_URL=mongodb://localhost:27017/dinov3_db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# MinIO/S3 Configuration (Local Development)
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin123
S3_BUCKET_NAME=dinov3-assets
S3_REGION=us-east-1

# Production R2 Configuration (Replace with your keys)
# R2_ENDPOINT_URL=https://your-account-id.r2.cloudflarestorage.com
# R2_ACCESS_KEY_ID=your_r2_access_key
# R2_SECRET_ACCESS_KEY=your_r2_secret_key
# R2_BUCKET_NAME=your-bucket-name

# DINOv3 Model Configuration
DINOV3_MODEL_NAME=dinov3_vitb16_pretrain
DINOV3_DEVICE=cuda  # Use 'cpu' if no GPU available
DINOV3_BATCH_SIZE=32
DINOV3_CACHE_SIZE=1000

# API Configuration
API_HOST=0.0.0.0
API_PORT=3012
API_WORKERS=1
DEBUG=true

# Security
SECRET_KEY=your-secret-key-change-this-in-production
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Processing Limits
MAX_FILE_SIZE_MB=50
MAX_BATCH_SIZE=100
REQUEST_TIMEOUT_SECONDS=300

# Quality Thresholds (Configurable)
DEFAULT_QUALITY_THRESHOLD=0.7
DEFAULT_SIMILARITY_THRESHOLD=75.0

# External Services (Add your keys here)

# PathRAG Configuration (ArangoDB via PathRAG API)
PATHRAG_API_URL=http://localhost:5000
PATHRAG_ENABLE=true
PATHRAG_DEFAULT_TOP_K=40
PATHRAG_MAX_TOKEN_FOR_TEXT_UNIT=4000
PATHRAG_MAX_TOKEN_FOR_GLOBAL_CONTEXT=3000
PATHRAG_MAX_TOKEN_FOR_LOCAL_CONTEXT=5000

# OPENAI_API_KEY=your_openai_key_for_shot_analysis
# ANTHROPIC_API_KEY=your_anthropic_key_for_descriptions
